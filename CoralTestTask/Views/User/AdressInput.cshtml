@model UserAddress

<div class="tab mt-1">
    <h3 class="card-header text-left">Contact Info:</h3>

    <div class="row">
        <div class="col-md-12 mt-3">

            <div><span asp-validation-for="Country" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="Country" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="Country" class="form-control">
                </div>
            </div>

            <div><span asp-validation-for="OfficeName" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="OfficeName" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="OfficeName" class="form-control">
                </div>
            </div>

            <div><span asp-validation-for="Address" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="Address" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="Address" class="form-control">
                </div>
            </div>

            <div><span asp-validation-for="PostalCode" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="PostalCode" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="PostalCode" class="form-control">
                </div>
            </div>

            <div><span asp-validation-for="City" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="City" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="City" class="form-control">
                </div>
            </div>

            <div><span asp-validation-for="State" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="State" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="State" class="form-control">
                </div>
            </div>
        </div>
    </div>
</div>