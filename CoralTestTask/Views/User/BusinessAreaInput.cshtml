@model UserBusinessArea

<div class="tab mt-1">
    <h3 class="card-header text-left">Contact Info:</h3>

    <div class="row text-left">
        <div class="col-md-6 mt-3">

            <div class="form-group form-check">
                <input  class="form-check-input" asp-for="Finance">
                <label class="form-check-label" asp-for="Finance" ></label>
            </div>
            
            <div class="form-group form-check">
                <input  class="form-check-input" asp-for="Operations">
                <label class="form-check-label" asp-for="Operations" ></label>
            </div>

            <div class="form-group form-check">
                <input  class="form-check-input" asp-for="IT">
                <label class="form-check-label" asp-for="IT" ></label>
            </div>

            <div class="form-group form-check">
                <input  class="form-check-input" asp-for="Sales">
                <label class="form-check-label" asp-for="Sales" ></label>
            </div>

            
            <div class="form-group form-check">
                <input  class="form-check-input" asp-for="Administrative">
                <label class="form-check-label" asp-for="Administrative" ></label>
            </div>

            <div class="form-group form-check">
                <input  class="form-check-input" asp-for="Legal">
                <label class="form-check-label" asp-for="Legal" ></label>
            </div>

            <div class="form-group form-check">
                <input  class="form-check-input" asp-for="Marketing">
                <label class="form-check-label" asp-for="Marketing"></label>
            </div>

        </div>

        <div class="col-md-6 mt-3">
            <div><span asp-validation-for="Comments" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="Comments" class="col-3 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="Comments" style="width: 250px; height: 150px;" class="form-control">
                </div>
            </div>
        </div>
    </div>
</div>